{
  "name": "DailyToDoList",
  "version": "0.0.0",
  "description": "DailyToDoList helps you to manage your tasks, writing them down gives you some space in your mind and you can focus on more important things instead of remembering and tracking your tasks in your mind. The application is available for Web, Android, Linux, Windows, Mac, and as a Chrome extension.",
  "main": "app.js",
  "scripts": {
    "build": "ng build",
    "create-installer:darwin": "electron-installer-dmg ./release-builds/DailyToDoList-darwin-x64/DailyToDoList.app Install_DailyToDoList --out=release-builds/darwin-installer --overwrite --icon=dist/assets/icon.icns",
    "create-installer:linux": "electron-installer-debian --src release-builds/DailyToDoList-linux-x64/ --arch amd64 --config installers/linux/debian.json",
    "create-installer:win": "node installers/windows/createinstaller.js",
    "deploy:gh-pages": "npx angular-cli-ghpages â€”dir=dist/ClientApp",
    "build:gh-pages": "ng build --configuration=web-production --base-href /DailyToDoList/",
    "electron-package": "ng build --prod --base-href ./ && electron-packager . --icon=dist/assets/icon.ico --no-prune --ignore=/node_modules --ignore=/e2e --ignore=/src --overwrite --out=release-builds",
    "lint": "ng lint",
    "ng": "ng",
    "start": "ng serve",
    "start:dev": "echo 'Starting (Dev)...' && ng serve --host 0.0.0.0 --disable-host-check",
    "start:electron": "ng build --prod --base-href ./ && electron .",
    "test": "ng test",
    "test:ci": "ng test --sourceMap=false --browsers=ChromeHeadless --watch=false",
    "watch": "ng build --watch --configuration development"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^12.2.14",
    "@angular/cdk": "^12.2.13",
    "@angular/common": "^12.2.14",
    "@angular/compiler": "^12.2.14",
    "@angular/core": "^12.2.14",
    "@angular/forms": "^12.2.14",
    "@angular/material": "^12.2.13",
    "@angular/platform-browser": "^12.2.14",
    "@angular/platform-browser-dynamic": "^12.2.14",
    "@angular/router": "^12.2.14",
    "@capacitor/android": "^3.3.2",
    "@capacitor/cli": "^3.3.2",
    "@capacitor/core": "^3.3.2",
    "@iplab/ngx-color-picker": "^2.1.1",
    "@ngrx/effects": "^12.5.1",
    "@ngrx/store": "^12.5.1",
    "hammerjs": "^2.0.8",
    "ngx-logger": "^4.3.3",
    "rxjs": "^7.3.1",
    "save": "^2.4.0",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.2.13",
    "@angular-eslint/builder": "12.5.0",
    "@angular-eslint/eslint-plugin": "12.5.0",
    "@angular-eslint/eslint-plugin-template": "12.5.0",
    "@angular-eslint/schematics": "12.5.0",
    "@angular-eslint/template-parser": "12.5.0",
    "@angular/cli": "^12.2.13",
    "@angular/compiler-cli": "^12.2.14",
    "@types/hammerjs": "^2.0.40",
    "@types/jasmine": "~3.9.1",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "electron": "^15.3.3",
    "eslint": "^7.26.0",
    "jasmine-core": "~3.9.0",
    "karma": "^6.3.9",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "^4.5.2"
  }
}
